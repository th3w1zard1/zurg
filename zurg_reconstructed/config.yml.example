# Zurg Configuration Example
# Real-Debrid API token (required)
token: "YOUR_REAL_DEBRID_API_TOKEN"

# Server settings
host: "0.0.0.0"
port: 9999
username: ""  # Optional basic auth username
password: ""  # Optional basic auth password

# Proxy settings (optional)
proxy: ""

# Worker and timing settings
num_of_workers: 10
refresh_every_secs: 120
repair_every_mins: 30
downloads_every_mins: 5

# Feature toggles
enable_repair: true
enable_download_mount: false
enable_retain_folder_name_extension: false
enable_retain_rd_torrent_name: false
should_ignore_renames: false
should_serve_from_rclone: false
should_force_ipv6: false
should_delete_rar_files: false

# Timeout and rate limiting
api_timeout_secs: 30
download_timeout_secs: 300
rate_limit_sleep_secs: 5
retries_until_failed: 3

# Network settings
network_buffer_size: 1048576  # 1MB

# Content settings
playable_extensions:
  - ".mp4"
  - ".mkv"
  - ".avi"
  - ".mov"
  - ".wmv"
  - ".flv"
  - ".webm"
  - ".m4v"
  - ".3gp"
  - ".ts"
  - ".m2ts"

# Limits
torrents_count: 2500
api_rate_limit_per_minute: 60
torrents_rate_limit_per_minute: 1

# Library update hook (optional shell script)
on_library_update: ""

# Directory mappings (configure based on your needs)
directories:
  # Example directory configuration
